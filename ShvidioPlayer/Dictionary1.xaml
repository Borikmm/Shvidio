<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <SolidColorBrush x:Key="Main_Background" Color="Black"/>
    <SolidColorBrush x:Key="Slider_Player_Background" Color="#FF3D277B"/>

    <LinearGradientBrush x:Key="Slider_border" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Gray" Offset="0.1"/>
        <GradientStop Color="Wheat" Offset="0.9"/>
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="Btn_area_bg" Center="0.5, 0.5" GradientOrigin="0.5, 0.5">
        <GradientStop Color="#FF8FD8FF" Offset="0.4"/>
        <GradientStop Color="#FF7575F1" Offset="0.8"/>
    </RadialGradientBrush>

</ResourceDictionary>